<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/practice_wrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFEFEF"
    tools:context=".PracticeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper_wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/upper_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/practice_done_tasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="70dp"
                android:gravity="center"
                android:text="@string/practice_done_examples"
                android:textColor="#E65100"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/practice_example"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/practice_example"
                android:textColor="#D36500"
                android:textSize="42sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lower_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="1:0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.gridlayout.widget.GridLayout
                android:id="@+id/practice_numpad_wrapper"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:columnCount="4"
                app:rowCount="4">

                <Button
                    android:id="@+id/practice_numpad_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="7"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="8"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="9"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_erase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_func_bg"
                    android:gravity="center"
                    android:text="back"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="4"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="5"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="6"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_func_bg"
                    android:gravity="center"
                    android:text="C"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="1"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="2"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="3"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_digit_bg"
                    android:gravity="center"
                    android:text="0"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_left_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_func_bg"
                    android:gravity="center"
                    android:text="left"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_func_bg"
                    android:gravity="center"
                    android:text="right"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_func_bg"
                    android:gravity="center"
                    android:text="."
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

                <Button
                    android:id="@+id/practice_numpad_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0sp"
                    android:background="@drawable/practice_numpad_func_bg"
                    android:gravity="center"
                    android:text="-"
                    app:cornerRadius="@null"
                    app:layout_columnWeight="1"
                    app:layout_gravity="fill"
                    app:layout_rowWeight="1" />

            </androidx.gridlayout.widget.GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>